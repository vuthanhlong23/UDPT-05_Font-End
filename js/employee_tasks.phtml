<script>
    var statusTasks = document.querySelectorAll(".information__container-right__content-list-item-link-status");
    statusTasks.forEach(index => {
        var statusValue = index.innerText;
        if(statusValue == "Hoàn thành"){
            index.style.cssText += "background-color:var(--green-color); color:var(--white-color);text-align:center;";
        }
        else if(statusValue == "Đang thực hiện"){
            index.style.cssText += "background-color:var(--orange-color); color:var(--white-color);text-align:center;";
        }
        else{
            index.style.cssText += "background-color:var(--red-color); color:var(--white-color);text-align:center;";
        }
    })

    function filterStatus(input){
        var url ="index.php?action=task&idEmployee="+input.value;
        if(url != ''){
            window.location=url;
        }
        return false;
    }
</script>